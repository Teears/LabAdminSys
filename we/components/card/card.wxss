/* components/card.wxss */
@import "/style/iconfont.wxss";
.card{
  perspective: 2500rpx;
}
.box{
  position: absolute;
  backface-visibility: hidden;
  width: 100%;
}
.backgroundMain{
  background-color: #0D0847;
  border-radius: 20rpx;
  height: 850rpx
}
.backgroundBack{
  background-image: linear-gradient(to bottom,#FF9966,#FF5E62);
  border-radius: 20rpx;
  height: 850rpx
}
/* 正面 */
/* 上下布局 */
.top{
  position: relative;
  text-align: center;
}
.bottom{
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  color: aliceblue;
  padding-top: 20rpx;
}
/* 插画样式 */
.main{
  width: 80%;
  /* background-color: hotpink; */
}
.leftTop{
  height: 150rpx;
  width: 150rpx;
  position: absolute;
  top: 50rpx;
  left: 50rpx;
}
.rightTop{
  height: 150rpx;
  width: 150rpx;
  position: absolute;
  top: 50rpx;
  right: 50rpx;
}
.leftBottom{
  height: 150rpx;
  width: 150rpx;
  position: absolute;
  bottom: 50rpx;
  left: 50rpx;
}
.rightBottom{
  height: 150rpx;
  width: 150rpx;
  position: absolute;
  bottom: 50rpx;
  right: 50rpx;
}
/* 日历样式 */
.calendar{
  height: 50%;
  width: 150rpx;
  border: thin solid rgb(221, 221, 221);
}
.date{
  height: 50%;
  font-size: xx-large;
  line-height: 100%;
  padding-top: 5rpx;
}
.day{
  font-size: x-small;
  height: 20%;
  border-bottom: thin solid rgb(221, 221, 221);
  padding: 2rpx;
  line-height: 100%;
}
.year_month{
  height: 30%;
  font-size: small
}
/* 下方提示文字样式 */
.bottom text{
  margin: 30rpx;
  font-size: xx-large  ;
} 

/* 
背面样式
 */
 .wrapperBack{
  transform: rotateY(-180deg);
  text-align: center;
}
.backgroundBack view{
  padding-top: 30rpx;
  font-size: 300%;
  color: white;
}
.iconfont{
  font-size: 1300%;
  color: white;
  font-weight: 900;
}