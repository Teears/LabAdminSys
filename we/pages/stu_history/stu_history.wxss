/* pages/stu_history/stu_history.wxss */
.out_wrapper{
  background-color: #F7F7F7;
  height: 100%;
  padding: 15rpx;
}
.card{
  border-bottom: thin solid rgb(221, 221, 221);
  border-right: thin solid rgb(221, 221, 221);
  border-radius: 20rpx;
  background-color: white;
} 
.popup{
  height: 500rpx;
  width: 80%;
  border-radius: 10rpx;
  padding: 40rpx;
}
.popup_content{
  color: #999999;
  word-break:break-all;
}
.popup_title{
  height: 60rpx;
  text-align: center;
  color: #666699;
  font-size: x-large;
  font-weight: 700;
}
/* 
  calendar
*/
.calendar_box{
  margin-top: 15rpx;
  background-color: white;
}
.calendar{
  background-color: white;
  height: 100%;
}
.header{
  height: 70rpx;
  font-size: large;
  padding-top: 20rpx;
}
.board{
  box-shadow: 0 4rpx 20rpx -8rpx #CCCCCC inset;
  background-color: white;
  color: #a9a9a9;
  padding-top: 30rpx;
  height: 560rpx;
}
/* 图例 */
.legend_box{
  height: 50rpx;
  width: 100%;
  display: inline-flex;
  justify-content:center;
  padding-top: 25rpx;
}
.legend{
  height: 25rpx;
  width: 25rpx;
  border-radius: 50%;
  margin-left: 40rpx;
}
.legend_box text{
  font-size: x-small;
  color: #a9a9a9;
  line-height: 25rpx;
}
.legend1{
  background-color: #99CC33;
}
.legend2{
  background-color: #FF9966;
}
.legend3{
  background-color: #CC3333;
}
.legend4{
  background-color: #666666;
}

/* 
  上
*/
.statistic{
  width: 100%;
  height: 25%;
}
/* 上左 */
.surpass_chart{
  width: 40%;
  height: 100%;
  float: left
}
/* 上右 */
.right_combine{
  width: 59%;
  height: 100%;
  float: right;
  /* margin-left: 15rpx; */
}
.chart_text_combine{
  width: 100%;
  height: 48%;
  margin-bottom: 2%;
}
.finish_rate_chart{
  width: 50%;
  height: 100%;
  float: left;
}
.total{
  float: right;
  width: 50%;
  color: #666699;
  text-align: center;
  font-size:1.2rem;
  font-weight: 800;
  /* 垂直居中 */
  position: relative;
  top:50%;
  transform: translateY(-50%);
}
.detail_chart{
  width: 100%;
  height: 48%;
  margin-top: 2%;
}